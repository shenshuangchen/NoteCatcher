<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgblue"
    android:id="@+id/content_small_world"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chrisf.notecatcher3.SmallWorld"
    tools:showIn="@layout/activity_small_world">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smallworld"
        android:id="@+id/imageView3"
        android:layout_marginBottom="143dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="B4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_A4"
        android:layout_alignEnd="@+id/note_A4"
        android:id="@+id/note_B4"
        android:clickable="false"/>

    <CheckBox
        android:text="C5"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_B4"
        android:layout_alignStart="@+id/note_B4"
        android:id="@+id/note_C5"
        android:clickable="false" />

    <CheckBox
        android:text="D4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_C5"
        android:layout_alignEnd="@+id/note_C5"
        android:id="@+id/note_D4"
        android:clickable="false" />

    <CheckBox
        android:text="E4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_D4"
        android:layout_alignEnd="@+id/note_D4"
        android:id="@+id/note_E4"
        android:clickable="false" />

    <CheckBox
        android:text="G4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_A4"
        android:layout_alignStart="@+id/note_F4"
        android:id="@+id/note_G4"
        android:clickable="false" />


    <CheckBox
        android:text="D5"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_G4"
        android:layout_alignStart="@+id/note_G4"
        android:id="@+id/note_D5"
        android:clickable="false" />

    <CheckBox
        android:text="F4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="77dp"
        android:id="@+id/note_F4"
        android:layout_below="@+id/note_D5"
        android:layout_alignParentEnd="true"
        android:clickable="false" />

    <CheckBox
        android:text="E5"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/note_E4"
        android:layout_alignStart="@+id/note_F4"
        android:id="@+id/note_E5"
        android:clickable="false" />

    <CheckBox
        android:text="A4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/note_A4"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <TextView
        android:text="It's a small, small world"
        android:fontFamily="casual"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/playAnother"
        android:layout_alignTop="@+id/note_E5"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
